<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{imagee.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{imagee.uniqueId}}">
            <i class="fa fa-times"> </i> delete
        </button>
    </div>
    <div class="card-body">
        <p>{{imagee.description}}</p>
        <div class="text-center">
            <img src="/public/upload/{{imagee.filename}}" alt="" class="img-fluid">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{imagee.filename}}">
            <i class="fas fa-thumbs-up"></i> like
        </button>
        <p>
            <span class="likes-count">{{imagee.likes}}</span>
            <i class="fas fa-heart"></i>
        </p>
        <p>
            <i class="fas fa-eye"></i> {{imagee.views}}
        </p>
        <p>
            <i class="far fa-clock"></i> 
            {{timeago imagee.timestamp}}
        </p>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comments</h3>
        <button class="btn btn-info" id="btn-toggle-comment">
            <i class="fa fa-comment-o"></i> Post a Comment
        </button>
    </div>
    <div class="card-body">
        <blockquote>
            <form action="/images/{{imagee.uniqueId}}/comment" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <textarea name="comment" rows="2" class="form-control" placeholder="Your Comment"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" id="btn-comment">
                        Post
                    </button>
                </div>
            </form>
        </blockquote>
    </div>
</div>